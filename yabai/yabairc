#binary split partition
yabai -m config layout bsp

yabai -m config window_placement second_chilid

#window padding
yabai -m config top_padding 12
yabai -m config bottom_padding 12
yabai -m config left_padding 12
yabai -m config right_padding 12
yabai -m config window_gap 12

#mouse settings
yabai -m config mouse_follows_foucus on

yabai -m config mouse_modifer alt 
#left click + drag (move window)
yabai -m config mouse_action1 move
#right click + drag resize
yabai -m config mouse_action1 resize

yabai -m mouse_drop_action swap

#disabled apps
yabai -m rule --add app="^(Notes|Calculator|Software Update|System Preferences|System Settings|Finder)$" manage=off
